{
  "name": "browser-rpass",
  "version": "1.0",
  "description": "browser extension for rpass",
  "background": {
    "service_worker": "run_service_worker.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "nativeMessaging",
    "background",
    "storage",
    "debugger"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.example.com/*",
        "*://extensions/*",
        "*://*.google.com/*",
        "*://*.mozilla.org/*",
        "*://practicetestautomation.com/*",
        "*://*/*",
        "file:///*",
        "https://developer.mozilla.org/*"
      ],
      "js": ["run_content.js"],
      "css": ["flowbite.min.css", "content_styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "run_wasm_content.js",
        "run_content.js",
        "content.js",
        "run_wasm_content_bg.wasm",
        "content_bg.wasm",
        "run_wasm_service_worker.js",
        "run_wasm_service_worker_bg.wasm"
      ],
      "matches": [
        "*://*.example.com/*",
        "*://*.google.com/*",
        "*://*.mozilla.org/*",
        "*://extensions/*",
        "*://practicetestautomation.com/*",
        "*://*/*",
        "file:///*",
        "https://developer.mozilla.org/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "rpass"
  }
}
